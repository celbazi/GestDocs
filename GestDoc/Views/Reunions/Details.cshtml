@model GestDoc.Models.Reunion

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reunion</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateReunion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateReunion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Remarque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Remarque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TypeReunion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeReunion.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Participants)
        </dt>
        <dd class="col-sm-10">
            @{
                foreach (var adherent in Model.Participants)
                {
                    @adherent.Adherent.Nom <br />
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Documents)
        </dt>
        <dd class="col-sm-10">
            @{
                foreach (var document in Model.Documents)
                {
                    <a asp-action="DownloadFile" asp-route-id="@document.ID">@document.URL</a><br/>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
